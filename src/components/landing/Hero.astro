---
import LogoCAD from "../logo-CAD.astro";
const  themeColor  = 'rgb(32 32 32);';
const zoomResolution = '1'; 
const isDark = false;
---
<script is:inline>import { transitionEnabledOnThisPage } from "astro:transitions/client";

    const element = document.documentElement;
    element.classList.toggle("dark");
    isDark = element.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");     
    //    alert(isDark)   ;
    // Asigna un valor apropiado a themeColor
    const themeColor = isDark ? 'white' : 'black';
    // alert(themeColor)
</script>



<style>
    button{
        /* background: #0062a7; */
        transition: all ease 0.3s
    }
    
</style>


<header id="header-hero" class="flex flex-col md:flex-row  md:flex-row p-20 gap-5 text-left text-center md:text-left rounderd-xl ">
    <div class="flex-1">
        <h1 class="text-5xl font-bold pb-2">Change As You Need!</h1>
        <p class="my-4 text-2xl">We merge code, creativity and marketing to boost your digital success. Explore, evolve, we gonna give you something really good.</p>
       
    </div>


    <div  class="flex-1" style="align-self: center; display: flex; flex-direction: column;" data-zoom={zoomResolution}> 
      
        <script is:inline>    
            let zoom = '0';
            const mediaQuery = window.matchMedia("(max-width: 768px)");    
            if (mediaQuery.matches) {
                zoom = '0';
                console.log("You are using a mobile device!"+zoom);
                
            } else {
                zoom = '2.5';
                console.log("You are not using a mobile device"+zoom);                
                
            }
            document.querySelector('[data-zoom]').setAttribute('data-zoom', zoom);
            console.log('After than all the zoom gonna be is : '+zoom);
                   
        </script>    
         <LogoCAD zoom={zoomResolution} theme={themeColor} theme_text="#00aeff"></LogoCAD>
         <button id="button-action-hero " style="max-width: 150px ;" class="text-white  mx-auto  px-10 py-2 bg-sky-600 hover:bg-sky-400 rounded-sm text-center  " >
            Run it up!
        </button >
             
    </div>

